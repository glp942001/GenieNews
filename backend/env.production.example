# Production Environment Variables
# Copy this to .env for production deployment

# Environment
ENVIRONMENT=production

# Django Configuration
DJANGO_SECRET_KEY=<generate-random-key-using-django>
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=.fly.dev,.vercel.app

# Database (provided by Fly.io PostgreSQL)
DATABASE_URL=postgresql://user:password@hostname:5432/dbname

# Redis (from Upstash or Fly.io Redis)
REDIS_URL=redis://user:password@hostname:6379

# Frontend URL (for CORS)
FRONTEND_URL=https://genienews.vercel.app

# OpenAI API
OPENAI_API_KEY=sk-your-actual-openai-key-here
AI_MODEL=gpt-4
EMBEDDING_MODEL=text-embedding-3-small
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=1000

# AI Curation
AI_RELEVANCE_KEYWORDS=artificial intelligence,machine learning,AI,deep learning,neural networks,LLM,GPT,transformers,computer vision,NLP,natural language processing,robotics,AI research,generative AI,large language model,autonomous systems,reinforcement learning
AI_RELEVANCE_THRESHOLD=0.3
AI_BATCH_SIZE=20

# Text-to-Speech Configuration
TTS_VOICE=nova
TTS_SPEED=1.10
TTS_MODEL=tts-1-hd

# Feed Ingestion
FEED_FETCH_TIMEOUT=30
FEED_USER_AGENT=GenieNewsBot/1.0
CONTENT_FETCH_TIMEOUT=60
MAX_RETRIES=3
ENABLE_PLAYWRIGHT=false
PLAYWRIGHT_HEADLESS=true
RATE_LIMIT_DELAY=3

